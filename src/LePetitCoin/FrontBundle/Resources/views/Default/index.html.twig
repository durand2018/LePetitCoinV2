            </ul>
        </nav>

    {% endblock %}

    <p class="liste10"> Liste des 10 derniers articles ajoutés sur notre site. </p>
    <div class="main-listArticles-wrapper">
        <div class="pure-g">
            {% for art in annonces %}
                <div class="article pure-u-1 pure-u-md-1-2">
                    <a href={{path('annonce',{'id':art.id})}}>
                        <div class="article-content">
                            <h3>   {{art.titre}} </h3>
                            <div class="pure-g">
                                <div class="pure-u-1 pure-u-md-1-2">{{art.categorie.libelle}}</div>
                                <div class="pure-u-1 pure-u-md-1-2">{{art.dateDepot|date("d/m/Y")}} </div>
                            </div>
                            <p> {{art.resume}} </p>
                        </div>
                    </a>
                </div>

            {% endfor %}
        </div>
    </div>
{% endblock %}

